{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "hydric",
  "api": {
    "examples": {
      "prefill": true
    }
  },
  "description": "The definitive guide to hydric API. Discover our multi-chain liquidity application and developer-first API. Your single point of access for DeFi data, token intelligence, and aggregated liquidity analytics across the blockchain ecosystem",
  "fonts": {
    "heading": {
      "family": "GeneralSans",
      "format": "woff2",
      "weight": 600,
      "source": "./brand/font/GeneralSans-Variable.woff2"
    },
    "body": {
      "family": "GeneralSans",
      "format": "woff2",
      "weight": 500,
      "source": "./brand/font/GeneralSans-Variable.woff2"
    }
  },
  "icons": {
    "library": "fontawesome"
  },
  "public": true,
  "search": {
    "prompt": "Search About hydric"
  },
  "logo": {
    "light": "/brand/logotype-light.svg",
    "dark": "/brand/logotype-dark.svg"
  },
  "background": {
    "color": {
      "dark": "#1D2123",
      "light": "#F1F6F8"
    }
  },
  "colors": {
    "primary": "#5EC7FF",
    "light": "#5EC7FF",
    "dark": "#84D0F9"
  },
  "favicon": {
    "light": "./brand/logo-light.svg",
    "dark": "./brand/logo-dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Learn about hydric",
            "pages": [
              "overview/what-is-hydric",
              "overview/why-hydric",
              "overview/architecture"
            ]
          },
          {
            "group": "System",
            "pages": [
              "overview/supported-blockchains",
              "overview/primitives",
              "overview/schema-standard"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "About API",
            "pages": [
              "api-reference/overview",
              "api-reference/error-codes",
              {
                "group": "Relevant Data Models",
                "pages": [
                  "api-reference/data-models/liquidity-pool",
                  "api-reference/data-models/protocol",
                  "api-reference/data-models/success-response",
                  "api-reference/data-models/error-response",
                  "api-reference/data-models/single-chain-token"
                ]
              }
            ]
          },
          {
            "group": "General APIs",
            "openapi": "https://api.hydric.org/v1/openapi.json"
          }
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@hydric.org"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/hydric-org"
    }
  }
}